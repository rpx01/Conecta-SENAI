# Example environment configuration for Conecta SENAI
# Copy this file to `.env` and adjust the values as needed.

# Database connection URL. If empty, a local SQLite file will be used.
DATABASE_URL=<definir_em_producao>

# Secret key used to sign JWT tokens.
SECRET_KEY=<definir_em_producao>
# Alternatively use FLASK_SECRET_KEY instead of SECRET_KEY.
#FLASK_SECRET_KEY=<definir_em_producao>

# Default administrator credentials
ADMIN_EMAIL=<definir_em_producao>
ADMIN_PASSWORD=<definir_em_producao>
ADMIN_USERNAME=<definir_em_producao>

# Redis connection settings for Redis backend
REDIS_HOST=localhost
REDIS_PORT=6379
# Full Redis URL for rate limiting and token revocation
REDIS_URL=redis://localhost:6379/0
# Storage URI used by Flask-Limiter
RATELIMIT_STORAGE_URI=redis://localhost:6379

# Observability
APP_ENV=development
APP_RELEASE=<git_sha>
LOG_LEVEL=INFO
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ATTRIBUTES="service.name=conecta-senai,service.version=${APP_RELEASE}"

# Background scheduler configuration
SCHEDULER_ENABLED=1
NOTIFICACAO_INTERVALO_MINUTOS=60

# Resend e-mail configuration
RESEND_API_KEY=<sua_chave_resend>
RESEND_FROM="Conecta SENAI <no-reply@seudominio.com>"
# Remetente personalizado para e-mails do sistema (opcional)
MAIL_FROM="Treinamentos SENAI <noreply@seu-dominio>"
#RESEND_REPLY_TO=<opcional_email_resposta>
APP_BASE_URL=https://conecta-senai.up.railway.app

